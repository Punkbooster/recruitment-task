<div class="row">
  <div class="col-md-3"></div>

  <div class="col-md-6">
    <h3>Products</h3>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Label</th>
          <th scope="col">Genres</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.title %></td>
            <td><%= product.price %></td>
            <td><%= product.label.name %></td>
            <td><%= product.genres.pluck(:name).join(', ') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-3"></div>
</div>
